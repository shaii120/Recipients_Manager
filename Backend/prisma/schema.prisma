generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
}

// using a local generator because the published one eithet out of support or doesn't fully supprt ESM
generator zod {
  provider = "prisma-generator-zod-local"
  output   = "./generated/zod"
}

model Receipt {
  id        String   @id @default(uuid())
  title     String
  amount    Float
  currency  String
  vendor    String?
  createdAt DateTime @default(now())
}
